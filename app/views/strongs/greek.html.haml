%title Tent of Meeting - Strongs Greek
%table{align: "left"}
	= paginate @greek_words
	- @greek_words.each do |w|
		- strong_id = w.strong_id
		- form = w.form
		- short_def = w.short_definition
		%tr{align:"left", :class => "strongs_row", onclick: "location.href='/greek/" + strong_id.to_s + "'"}
			%td{style:"padding-left:5%;"}
				=link_to strong_id.to_s, "/greek/"+strong_id.to_s
			%td{style:"padding-left:10%;"}
				=link_to form, "/greek/"+strong_id.to_s
			%td{style:"padding-left:10%;"}
				=short_def