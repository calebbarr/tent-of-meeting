:javascript
	$(document).ready(function(){
		$("#main_header").html("#{@verse.link}")
	});	

%title
	Tent of Meeting -
	= @book.name.to_s
	= @chapter.name.to_s + "\:"+@verse.name.to_s
%div{style: "display:block"}
	#verse_text{style: "padding-left:10%; padding-right:10%; vertical-align:middle;", align: "center"}
		%font{size: "4"}
			-if @translations == nil then
				- puts "in the view, translations is nil"
				=@verse_text
			-else
				- puts "in the view, translations is NOT nil"
				-tokens = @verse_text.split()
				-tokens.each_with_index do |token,index|
					%span{title: @translations[index]}
						- if index < @strong_ids.length then
							=link_to token, -> { @verse.id >= FIRST_NT_VERSE ? "/greek/" :  "/hebrew/"}.call + @strong_ids[index]
						- else 
							= token
		#verse_audio{style: "display:none"}
			- audio_url = audio_url(@verse.name.to_s,@chapter.name.to_s,@book.name,@book.id.to_s)
			%object{:data => "http://flash-mp3-player.net/medias/player_mp3_maxi.swf", :height => "20", :type => "application/x-shockwave-flash", :width => "200"}
				%param{:name => "movie", :value => "http://flash-mp3-player.net/medias/player_mp3_maxi.swf"}/
				%param{:name => "bgcolor", :value => "#ffffff"}/
				%param{:name => "FlashVars", :value => "mp3="+audio_url+"&&showvolume=1&&showslider=1"}/
			%input{type: "checkbox", title: "read to me"}