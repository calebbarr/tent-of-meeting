:javascript
	var audio_html = '<object type="application/x-shockwave-flash" data="http://flash-mp3-player.net/medias/player_mp3_multi.swf" width="200" height="20"> <param name="movie" value="player_mp3_maxi.swf" /> <param name="FlashVars" value="playlist=#{audio_url}&&showvolume=1&&showslider=1"/> <param name = "bgcolor" value = "ffffff"/> </object>';
	$(document).ready(function(){
		$("#main_header").html("#{@book.link}");
		$("#book").accordion();
		// bindLayoutButtons({"view" : "book", "audio" : "book"});
		$("#audio").html(audio_html);
		$("#audio").show();
	});
	
%title
	Tent of Meeting -
	= @book.name.to_s
	
#book
	- @chapters.each do |chapter|
		%h3{:style => "padding-left:10%", onClick: "setCurrChapter('#{chapter.id}')"}
			= link_to chapter.name, "/"+@book.name.to_s+"/"+chapter.name.to_s
		%div{:class => "accordion_row", onclick: "location.href='#{chapter.path}'"}
			= chapter.text
