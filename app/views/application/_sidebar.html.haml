.sidebar1{style: "height:325px;"}
	#sidebar_spacer{style: "height:10px;"}
	%nav{align: "right"}
		.sidebar_item
			%button{id: "sidebar_button_1", :class => "sidebar_button", href:"#", title: "audio"}
				= image_tag "icons2/32x32/sound.png"
		.sidebar_item
			%button{id: "memorize_button", :class => "sidebar_button", onClick: "memorize('#{@verse.id}')", title: "memorize"}
				= image_tag "icons/32x32/magnifier.png"
		.sidebar_item
			%button{id: "quiz_button", :class => "sidebar_button", onClick: "quiz('#{@verse.id}')" , title: "quiz"}
				= image_tag "icons/32x32/check_mark.png"
		.sidebar_item
			%input{id: "favorite_button", type:"checkbox", checked: -> {@verse.is_favorite?(->{signed_in? ? current_user.id : 1 }.call)}.call, onClick: "toggleFavorite('" + @verse.id.to_s + "')" }
			%label{for: "favorite_button", title: " "+ -> {@verse.is_favorite?(->{signed_in? ? current_user.id : 1 }.call) ? "unfavorite" : "favorite"}.call+ " "}
				= image_tag "icons/32x32/heart.png"
		/ %button{id: "sidebar_button_4", :class => "sidebar_button", title: -> {return @verse.has_note?(id = -> {signed_in? ? current_user.id : 1 }.call ) ? "notes" : "new note"}.call, onClick: "verseNotes("+@verse.id.to_s+", "+ -> {return @verse.has_note?(id = -> {signed_in? ? current_user.id : 1 }.call ) ? 'false)' : 'true)'}.call }
		.sidebar_item
			/- note_url= -> { return @verse.has_note?(id = -> {signed_in? ? current_user.id : 1 }.call ) ?  url_for(controller: :notes, action: :show, :verse_id => @verse.id) : url_for(controller: :notes, action: :new, :verse_id => @verse.id) }.call
			%button{id: "notes_button", :class => "sidebar_button", onclick: "showNotes('#{@verse.id}')"}
				= image_tag "icons/32x32/pencil.png"
		.sidebar_item
			%button{id: "related_button", :class => "sidebar_button", onClick: "show_related(#{@verse.id})", title: "related"}
				= image_tag "icons/32x32/placemark.png"
	/ %aside{style: "height:107px; overflow:scroll;"}
