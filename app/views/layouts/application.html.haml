%html
	%head
		%title Tent of Meeting
		/ = stylesheet_link_tag 'web_app_theme'
		= javascript_include_tag 'application'
		= csrf_meta_tag
	%body
		#container
			#header
				%h1
					/ %a{:href => "/"} =Tent of Meeting
				#user-navigation{:align => "center"}
					[
					= link_to "Profile", profile_path
					= link_to "Settings", settings_path
					= link_to "Logout", destroy_user_session_path, :method => :delete
					]
				#main-navigation
					%ul.wat-cf
			#wrapper.wat-cf
				.flash
					- flash.each do |type, message|
						%div{:class => "message #{type}"}
							%p= message
				#main{:align => "center"}
					= yield
					#footer
						.block
							%p
								[
								=link_to "<<","#"
								|
								=link_to "<","#"
								|
								=link_to "*","#"
								|
								=link_to ">","#"
								|
								=link_to ">>","#"
								]
				#sidebar
					= yield :sidebar
